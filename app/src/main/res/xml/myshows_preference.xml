<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="false"
        android:key="compact_mode"
        android:summary="@string/compact_mode_description"
        android:title="@string/compact_mode" />

    <Preference
        android:key="clear_cache"
        android:summary="@string/clear_cache_summary"
        android:title="@string/clear_cache" />

    <PreferenceCategory android:title="@string/notification">

        <SwitchPreference
            android:defaultValue="true"
            android:key="check_new_series"
            android:title="@string/check_new_series" />

        <Preference
            android:key="time"
            android:title="@string/time" />

        <Preference
            android:key="ringtone"
            android:title="@string/ringtone" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="vibration"
            android:title="@string/vibration" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/other">

        <Preference
            android:key="sign_out"
            android:title="@string/sign_out" />

    </PreferenceCategory>

</PreferenceScreen>
