<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/nav_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_height"
        android:background="?attr/colorPrimaryDark"
        android:scaleType="centerCrop" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_height_half"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/nav_avatar_size_half"
        android:background="@drawable/nav_image_gradient" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/nav_avatar"
        android:layout_width="@dimen/nav_avatar_size"
        android:layout_height="@dimen/nav_avatar_size"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="@dimen/nav_avatar_top_margin"
        android:src="@drawable/default_avatar"
        app:border_color="@android:color/white"
        app:border_width="2dp" />

    <TextView
        android:id="@+id/nav_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="11dp"
        android:layout_marginLeft="128dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/nav_text_color"
        android:textSize="18sp"
        tools:text="Username" />

</FrameLayout>
