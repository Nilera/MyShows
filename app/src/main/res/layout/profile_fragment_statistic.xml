<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="96dp"
        android:divider="@drawable/statistic_divider"
        android:showDividers="middle">

        <me.myshows.android.ui.view.StatisticView
            android:id="@+id/episodes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:caption="@plurals/episodes_caption" />

        <me.myshows.android.ui.view.StatisticView
            android:id="@+id/days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:caption="@plurals/days_caption" />

        <me.myshows.android.ui.view.StatisticView
            android:id="@+id/hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:caption="@plurals/hours_caption" />

    </LinearLayout>

    <TextView
        android:id="@+id/place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@drawable/place_background"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="13sp" />

</FrameLayout>
