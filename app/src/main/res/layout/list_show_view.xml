<?xml version="1.0" encoding="utf-8"?>
<me.myshows.android.ui.views.ListShowView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/show_image_height"
        android:contentDescription="Show image" />

    <View
        android:id="@+id/shadow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_show_shadow_height"
        android:background="@drawable/list_show_shadow" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/show_image_gradient_height"
        android:layout_gravity="bottom"
        android:background="@drawable/show_image_gradient" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_show_text_height"
            android:ellipsize="end"
            android:fontFamily="sans-serif-light"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingLeft="@dimen/default_padding"
            android:paddingRight="@dimen/default_padding"
            android:textColor="@color/list_show_text_color"
            android:textSize="@dimen/list_show_text_size" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_show_progress_height"
            android:minHeight="0dp"
            android:progressDrawable="@drawable/progress_drawable" />

    </LinearLayout>

</me.myshows.android.ui.views.ListShowView>
