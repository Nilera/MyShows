<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyShows.EditText.Login" parent="Widget.AppCompat.EditText">
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:background">@drawable/login_edit_text</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:gravity">left</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white_80_opacity</item>
        <item name="android:textColorHint">@color/white_60_opacity</item>
    </style>

    <style name="MyShows.ShowScreen.Title.TextAppearance" parent="">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MyShows.ShowScreen.TextView" parent="">
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">#888888</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="MyShows.ShowScreen.TextView.Header">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#717171</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MyShows.RatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar</item>
        <item name="android:indeterminateDrawable">@drawable/ratingbar</item>
        <item name="android:minHeight">27dp</item>
        <item name="android:maxHeight">27dp</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">1</item>
    </style>

    <style name="MyShows.RatingScreen.TextAppearance" parent="">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MyShows.RatingScreen.TextAppearance.Secondary">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Preference_TextAppearanceMaterialBody2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyShows.Preference.TextAppearance.Title" parent="">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MyShows.Preference.TextAppearance.Summary" parent="">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MyShows.DialogWindowTitle" parent="RtlOverlay.DialogWindowTitle.AppCompat">
        <item name="android:textAppearance">@style/MyShows.TextAppearance.Title</item>
    </style>

    <style name="MyShows.TextAppearance.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyShows.TextAppearance.Dialog.Button" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:textStyle">bold</item>
    </style>
</resources>
